<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Forgot password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email",class: 'form-control' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Send password instructions",class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>
    <div>
      <%= link_to "Login", new_session_path(resource_name), class: 'fw-bold' %>
    </div>
  </div>
  <div class="col-4"></div>
</div>
