<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2><u>Update Company</u></h2>
    <%= form_with model: @company do |form| %>
      
      <div class="form-group">
        <%= form.text_field :name, placeholder: 'Company Name', class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.text_field :host, placeholder: 'Host', class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        Package: <%= form.select :package, Company.packages.keys, class: 'form-control' %>
      </div>

      <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= link_to "Back", company_path %>
  </div>
  <div class="col-4"></div>
</div>
