<div class= 'row mt-4'>
  <div class='col-md-6'>
    <h3>Companies</h3>
  </div>
  <div class='col-md-6'>
    <div class="float-end">
      <%= link_to ' + Add Company ', new_company_path , class: 'btn btn-primary'%>
    </div>
  </div>
  </br>
  </br>
  </br>
  <div class="table-responsive col-md-12">
    <table id="example" class="table table-striped" style="width:100%">
      <thead>
        <tr>
          <th>Company name</th>
          <th>Host</th>
          <th>Subscription plan</th>
          <th>No. of users</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%=  company.host %></td>
            <td><%=  company.package %></td>
            <td></td>
            <td><%#= link_to "<i class='far fa-eye'></i>".html_safe,company_path(company) %><%= link_to "<i class='far fa-edit'></i>".html_safe,edit_company_path(company) %>&nbsp;&nbsp; <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, company_path(company), method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>  
      </tbody>
      <!-- <tfoot>
        <tr>
          <th>Name</th>
          <th>Host</th>
          <th>Package</th>
          <th></th>
        </tr>
      </tfoot> -->
    </table>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#example').DataTable();
  } );
</script> 
