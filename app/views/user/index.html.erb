<div class= 'row mt-5'>
  <div class='col-md-6'>
    <h3>Registered Users</h3>
  </div>
  <div class='col-md-6'>
    <div class="float-end">
      <%= link_to "Add User", new_user_path, class: 'btn btn-primary' %>
    </div>
  </div>
  </br>
  </br>
  </br>
  <div class="table-responsive col-md-12">
    <table id="example" class="table table-striped" style="width:100%">
      <thead>
        <tr>
          <th>User Name</th>
          <th>Email</th>
          <th>Company Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="border">
            <td><%= user.user_name %></td>
            <td><%=  user.email %></td>
            <td><%= user.company_name %></td>
            <td><%= link_to "<i class='far fa-eye'></i>".html_safe,user_path(user) %>&nbsp;&nbsp; <%= link_to "<i class='far fa-edit'></i>".html_safe,edit_user_path(user) %>&nbsp;&nbsp; <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, user_path(user),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th>User Name</th>
          <th>Email</th>
          <th>Company Name</th>
          <th></th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#example').DataTable();
  } );
</script> 
